extends ../layouts/default

block main
  h1 Hackers

block content
  .row
    each user in users
      .span4.hacker
        .row
          .span1
            a(href="/profile/"+user.username)
              img(src=user.github.avatar_url)
          .span3
            p= user.name
            i.icon-user
            &nbsp;
            a(href=user.github.html_url, target="_blank") github.com/#{user.username}
